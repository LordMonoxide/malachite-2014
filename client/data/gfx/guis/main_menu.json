{
  controls: {
    login: {
      type: window,
      text: ~menu.login.title,
      icon: "#gui.icons.key",
      bounds: {
        x: 490,
        y: 260,
        w: 300,
        h: 200
      },
      
      controls: {
        login_email: {
          type: textbox,
          placeholder: ~menu.login.email,
          bounds: {
            wh: {
              bind_x: @login.content_bounds.wh
            },
            
            x: 4,
            y: 4,
            w: -8,
            h: 20
          }
        },
        
        login_password: {
          type: textbox,
          placeholder: ~menu.login.password,
          masked: true,
          bounds: {
            xy: {
              bind_x: @login_email.bounds.xy,
              bind_y: @login_email.bounds.xy
            },
            
            wh: {
              bind_x: @login_email.bounds.wh,
              bind_y: @login_email.bounds.wh
            },
            
            y: 28
          }
        },
        
        login_submit: {
          type: button,
          auto_size: true,
          text: ~menu.login.submit,
          bounds: {
            xy: {
              bind_x: @login_password.bounds.xy,
              bind_y: @login_password.bounds.xy
            },
            
            y: 28
          },
          events: {
            on_click: "login(@login_email.text,@login_password.text)"
          }
        }
      }
    }
  }
}