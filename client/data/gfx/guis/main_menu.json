{
  controls: {
    login: {
      type: window,
      text: ~menu.login.title,
      icon: "#gui.icons.key",
      bounds.x: 490,
      bounds.y: 260,
      bounds.w: 300,
      bounds.h: 200,
      
      controls: {
        login_email: {
          type: textbox,
          placeholder: ~menu.login.email,
          bounds.wh.bind_x: @login.content_bounds.wh,
          bounds.x: 4,
          bounds.y: 4,
          bounds.w: -8,
          bounds.h: 20
        },
        
        login_password: {
          type: textbox,
          placeholder: ~menu.login.password,
          masked: true,
          bounds.xy.bind: @login_email.bounds.bl,
          bounds.wh.bind: @login_email.bounds.wh,
          bounds.y: 8
        },
        
        login_submit: {
          type: button,
          auto_size: true,
          text: ~menu.login.submit,
          bounds.xy.bind: @login_password.bounds.br,
          
          events: {
            on_click: "login(@login_email.text,@login_password.text,@login_submit.bounds)"
          }
        }
      }
    }
  }
}