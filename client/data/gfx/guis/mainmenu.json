{
  controls: {
    login: {
      type: window,
      text: ~menu.login.title,
      icon: "#gui.icons.key",
      pos: {
        x: 490,
        y: 260
      },
      size: {
        x: 300,
        y: 200
      },
      
      controls: {
        login_email: {
          type: textbox,
          placeholder: ~menu.login.email,
          pos: {
            x: 4,
            y: 4
          },
          size: {
            bindX: @login.content_size,
            x: -8,
            y: 20
          }
        },
        
        login_password: {
          type: textbox,
          placeholder: ~menu.login.password,
          masked: true,
          pos: {
            bindX: @login_email.pos,
            bindY: @login_email.pos,
            y: 28
          },
          size: {
            bindX: @login_email.size,
            bindY: @login_email.size
          }
        },
        
        login_submit: {
          type: button,
          auto_size: true,
          text: ~menu.login.submit,
          pos: {
            bindX: @login_password.pos,
            bindY: @login_password.pos,
            y: 28
          }
        }
      }
    }
  }
}